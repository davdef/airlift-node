[Unit]
Description=Airlift Node Service
After=network.target

[Service]
Type=simple
User=airlift
Group=airlift
WorkingDirectory=/etc/airlift-node
ExecStart=/opt/airlift-node/airlift-node
Environment=RUST_LOG=info
Restart=on-failure
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
